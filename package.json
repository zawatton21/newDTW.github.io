{
  "name": "newdtw",
  "version": "1.0.0",
  "description": "Rebuild Diavolo The Wanderer",
  "main": "public/main/main.js",
  "scripts": {
    "build": "tsc && webpack",
    "watch": "webpack -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron public/main/main.js",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/zawatton21/newDTW.git",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "type": "commonjs",
  "author": "Zawa-Ton",
  "license": "CC0-1.0",
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@types/node": "^18.11.8",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^9.1.3",
    "electron": "^22.0.0-alpha.6",
    "electron-builder": "^24.0.0",
    "electron-store": "^8.1.0",
    "eslint": "^7.32.0",
    "typescript": "^4.8.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "msgpack-lite": "^0.1.26",
    "ts-loader": "^9.4.4",
    "ts2c": "^2.2.9",
    "yargs": "^7.1.2",
    "yargs-parser": "^5.0.0"
  },
  "build": {
    "appId": "com.electron.yourapp",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/index.html",
      "public/main/*",
      "public/bundle/*",
      "public/lib/*",
      "assets/**/*",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "assets/icon/mac/icon_mac.icns",
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      }
    },
    "win": {
      "icon": "assets/icon/win/icon_win.ico",
      "target": {
        "target": "nsis",
        "arch": [
          "ia32",
          "x64",
          "arm64"
        ]
      }
    },
    "linux": {
      "icon": " assets/icon/linux/DTW.png",
      "target": {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "deb": {},
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
