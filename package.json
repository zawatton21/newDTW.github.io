{
  "name": "newdtw",
  "version": "1.0.0",
  "description": "Rebuild Diavolo The Wanderer",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron build/main.js",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/zawatton21/newDTW.git",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "type": "commonjs",
  "author": "Zawa-Ton",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/node": "^18.11.8",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^22.0.0-alpha.6",
    "electron-builder": "^23.6.0",
    "electron-store": "^8.1.0",
    "eslint": "^7.32.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "yargs": "^7.1.2",
    "yargs-parser": "^5.0.0"
  },
  "build": {
    "appId": "com.electron.yourapp",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/*",
      "assets/**/*",
      "package.json",
      "package-lock.json"
    ],
    "extraResources": [
      {
        "from": "./assets/",
        "to": "app/assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "assets/icon/mac/icon_mac.icns",
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      }
    },
    "win": {
      "icon": "assets/icon/win/icon_win.ico",
      "target": {
        "target": "nsis",
        "arch": [
          "ia32",
          "x64",
          "arm64"
        ]
      }
    },
    "linux": {
      "icon": "assets/icon/linux/DTW.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "deb": {},
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
